dnPlot_st_1  =  plot(trend_st_1  ==  1  ?  na  :  dn_st_1,  title="Down  Trend  1",  style=plot.style_linebr,  linewidth=1,  color=color.rgb(100,  20,  20,  10),  display=plot_st_1?display.all:display.none)
