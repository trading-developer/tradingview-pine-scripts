//////////////////////////////////////////////////////////////////////////////////////////////////
enTEMAFAMA  =  input(title="Enter  on  fastTEMA  crossover  eFAMA",  type=input.bool,  defval=true,  group="Strategy  Options",  tooltip="Each  entry  or  exit  option  is  included  with  OR  logic.")
