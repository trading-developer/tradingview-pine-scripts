wtBearDiv_add?color.new(colorRed,60):
rsiBearDiv?colorRed:na
//GoldBuy
lastRsi=valuewhen(wtFractalBot,rsi[2],0)[2]
wtGoldBuy=((wtShowDivandwtBullDiv)or(rsiShowDivandrsiBullDiv))and
wtLow_prev<=osLevel3and
