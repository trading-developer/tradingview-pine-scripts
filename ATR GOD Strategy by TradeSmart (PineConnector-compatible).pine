dn_st_1  =  src_st_1  +  (mult_st_1  *  atr_st_1)
dn1_st_1  =  nz(dn_st_1[1],  dn_st_1)
dn_st_1  :=  close[1]  <  dn1_st_1  ?  math.min(dn_st_1,  dn1_st_1)  :  dn_st_1
trend_st_1  =  1
