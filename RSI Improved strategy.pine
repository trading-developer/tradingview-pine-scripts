                label.delete(label1[1])
                strategy.order("Rsi  long",  strategy.long,  1  ,  comment  =  "Rsi  long")
                strategy.exit("exit",  "Rsi  long",  profit  =  Reward,  loss  =  Risk,  comment  =  "Rsi  long  exit")
