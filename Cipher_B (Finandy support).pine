//CALCULATEINDICATORS{
//RSI
rsi=rsi(rsiSRC,rsiLen)
rsiColor=rsi<=rsiOversold?colorGreen:rsi>=rsiOverbought?colorRed:colorPurple
//RSI+MFIArea
rsiMFI=f_rsimfi(rsiMFIperiod,rsiMFIMultiplier,timeframe.period)
