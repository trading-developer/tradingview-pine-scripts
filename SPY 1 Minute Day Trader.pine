minusDI=100*ta.ema(minusDM,len)/ta.ema(tr,len)
//CalculatetheDirectionalIndex(DX)
DX=100*math.abs(plusDI-minusDI)/(plusDI+minusDI)
//CalculatetheADX
adx=ta.ema(DX,len)
